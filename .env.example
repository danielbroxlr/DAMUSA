# DAMUSA LIMS Configuration
# Copy this file to .env and update the values

# Application
VITE_APP_NAME=DAMUSA
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_DOMAIN=auth.damusa.io
VITE_AUTH_CLIENT_ID=your_client_id

# Database (for backend)
DATABASE_URL=postgresql://user:password@localhost:5432/damusa
DATABASE_POOL_SIZE=10

# Storage
VITE_STORAGE_BUCKET=damusa-files
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=eu-west-1

# Features
VITE_ENABLE_ELN=true
VITE_ENABLE_REGMOL=true
VITE_ENABLE_ANALYTICS=true
